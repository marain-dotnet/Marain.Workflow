{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "accountName": {
      "type": "string",
      "minLength": 1
    },
    "defaultConsistency": {
      "type": "string",
      "defaultValue": "Session",
      "allowedValues": [
        "Session",
        "Strong",
        "Eventual",
        "Bounded_Staleness",
        "Consistent_Prefix"
      ]
    },
    "defaultExperience": {
      "type": "string",
      "defaultValue": "Core (SQL)",
      "allowedValues": [
        "Core (SQL)",
        "MongoDB",
        "Gremlin",
        "Table"
      ]
    },
    "maxIntervalInSeconds": {
      "type": "int",
      "defaultValue": 5
    },
    "maxStalenessPrefix": {
      "type": "int",
      "defaultValue": 100
    },
    "databaseAccountOfferType": {
      "type": "string",
      "defaultValue": "Standard"
    },
    "tagValues": {
      "type": "object",
      "defaultValue": {}
    }
  },
  "variables": {
    "localTags": {
      "defaultExperience": "[parameters('defaultExperience')]"
    },
    "tags": "[union(parameters('tagValues'), variables('localTags'))]"
  },
  "resources": [
    {
      "comments": "CosmosDB",
      "type": "Microsoft.DocumentDB/databaseAccounts",
      "kind": "GlobalDocumentDB",
      "name": "[parameters('accountName')]",
      "apiVersion": "2019-12-12",
      "location": "[resourceGroup().location]",
      "tags": "[variables('tags')]",
      "scale": null,
      "properties": {
        "databaseAccountOfferType": "[parameters('databaseAccountOfferType')]",
        "locations": [
          {
            "locationName": "[resourceGroup().location]"
          }
        ],
        "consistencyPolicy": {
          "defaultConsistencyLevel": "[parameters('defaultConsistency')]",
          "maxIntervalInSeconds": "[parameters('maxIntervalInSeconds')]",
          "maxStalenessPrefix": "[parameters('maxStalenessPrefix')]"
        },
        "name": "[parameters('accountName')]"
      },
      "dependsOn": []
    }
  ],

  "outputs": {
    "primaryKey": {
      "type": "string",
      "value": "[listKeys(resourceId('Microsoft.DocumentDB/databaseAccounts', parameters('accountName')), '2015-11-06').primaryMasterKey]"
    }
  }
}